@model IEnumerable<WebApp.Models.ActualNumberOfShipments>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.DepartureCity.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalCity.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PlanedNumberOfShipments)
        </th>
        
            @for(var i = 1; i<=31;i++)
            {
                <th>
                    @i
                 </th>
            }
        <th>Фактическое количество</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.DepartureCity.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArrivalCity.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PlanedNumberOfShipments)
        </td>
        
            @foreach(var subItem in item.ActualInMonthForThisWay.ActualInDays)
            {
                <td>@subItem</td>
            }
        
                <td>
                    @Html.DisplayFor(modelItem => item.ActualNumberOfShipment)
                </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
